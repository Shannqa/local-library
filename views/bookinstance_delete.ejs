<%- include("./partials/head") %>
<body>
  <%- include("./partials/header") %>
  <%- include("./partials/sidebar") %>
  <div class="main">
    <h2>Book copy</h2>
    <h3>ID: <%= bookinstance._id %></h3>
    <p>Title: <a href="<%= bookinstance.book.url %>"><%= bookinstance.book.title %></a></p>
    <p>Imprint: <%= bookinstance.imprint %></p>
    <p>Status: <%= bookinstance.status %></p>
    <% if (bookinstance.due_back) { %>
      <p>Due: <%= bookinstance.due_back_formatted %></p>
    <% } %>

    <p>Do you really want to delete this book copy?</p>
    <form method="POST">
      <input type="hidden" name="bookinstanceid" value="<%= bookinstance._id %>">
      <input type="submit" value="Delete">
    </form>
  </div>
</body>
</html>