<%- include("./partials/head") %>
  <body>
    <%- include("./partials/header") %>
    <%- include("./partials/sidebar") %>
    <div class="main">
      <h2>Genre: <%= genre.name %></h2>
      <h3>Books</h3>
      <% if (genre_books.length) { %>
        <p>Delete the following books before attempting to delete this genre.</p>
          <% genre_books.forEach(book => { %>
            <h4><a href="<%= book.url %>"><%= book.title %></a></h4>
            <p><%= book.summary %></p>
          <% }) %>

        </ul>
      <% } else { %>
        <p>There are no books in this genre.</p>

        <p>Do you really want to delete this genre?</p>
        <form method="POST">
          <input type="hidden" name="genreid" value="<%= genre._id %>">
          <input type="submit" value="Delete">
        </form>
      <% } %>
    </div>
  </body>
</html>